<resources>

    <!-- Base application theme. -->
    <style name="base_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/base_white</item>
    </style>

    <style name="base_start_theme" parent="base_AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/base_ic_launcher</item>
    </style>
</resources>
